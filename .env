# Netlify settings for React.js deployment

# Node environment, usually "production"
NODE_ENV=production

# Directory to publish, usually "build" for React apps
PUBLISH_DIR=build

# Command to run the build script
BUILD_COMMAND=npm run build

# Set to true to force npm install during deployment
NPM_FLAGS=--force

# Ensure the environment variables are exported properly
EXPORT_NODE_ENV=true
EXPORT_PUBLISH_DIR=true
EXPORT_BUILD_COMMAND=true
EXPORT_NPM_FLAGS=true
